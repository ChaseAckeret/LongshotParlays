@model IEnumerable<LongshotParlays.Model.NFLPlayerStats_RushingListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success" fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" date-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attempts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yards)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Touchdowns)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PlayerId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Attempts)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Yards)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Touchdowns)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PlayerId }) |
        @Html.ActionLink("Details", "Details", new { id = item.PlayerId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.PlayerId })
    </td>
</tr>
    }

</table>
